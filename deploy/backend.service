[Unit]
Description=Agentic Search Ops Backend
Documentation=https://github.com/YOUR_USERNAME/agentic-search-ops
After=network.target network-online.target
Wants=network-online.target

[Service]
Type=simple
User=claude-kb
Group=claude-kb
WorkingDirectory=/opt/claude-kb/backend

# Environment
Environment="PATH=/opt/claude-kb/backend/venv/bin:/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=/opt/claude-kb/.env

# Command
ExecStart=/opt/claude-kb/backend/venv/bin/uvicorn main:app --host 127.0.0.1 --port 8000 --workers 2

# Restart policy
Restart=always
RestartSec=10
TimeoutStartSec=60
TimeoutStopSec=30

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=claude-kb

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/claude-kb/data /var/log/claude-kb
ProtectKernelTunables=true
ProtectKernelModules=true
ProtectControlGroups=true

# Resource limits
LimitNOFILE=65536
LimitNPROC=4096

[Install]
WantedBy=multi-user.target
